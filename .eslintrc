{
  "env": {
    "es6": true,
    "browser": true,
    "jasmine": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true
    }
  },
  "rules": {
    "comma-dangle": ["error", "always-multiline"],
    "curly": "error",
    "eol-last": 2,
    "indent": [
      "error",
      "tab",
      { "SwitchCase": 1 }
    ],
    "no-undef": "error",
    "no-var": "error",
    "object-curly-spacing": [
      0,
      "always"
    ],
    "quotes": [
      2,
      "single",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }
    ],
    "semi": [2, "never"],
    "strict": [ 0, "global" ],
    "valid-jsdoc": "error"
  }
}
